{
    "manifest_version": 3,
    "name": "IMBD Shortener",
    "version": "1.0.3",
    "description": "Quickly create shortened URLs using IMBD Shortener with user authentication",
    "permissions": [
        "tabs",
        "storage",
        "clipboardWrite",
        "notifications"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://imbdurl.com;"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}